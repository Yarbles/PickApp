<html>
    <head>
        <link rel="stylesheet" href='../css/bootstrap.css'>
        <link rel='stylesheet' href='../css/login.css'>
        <title>PickApp</title>
    </head>
    <body>
      <center>
        <div class='header'><h1>PickApp<small>Join the Fun</small></h1>
          <img src='/images/pickapplogo.jpg'></img>
        <form action='/events'>
            <button type"submit" class='btn btn-primary'>Events</button>
        </form>
        <form action='/login'>
            <button type"submit" class='btn btn-primary'>Login</button>
        </form>
        <div class='black'>
        <form action='/create_login'>
            <button type"submit" class='btn btn-primary'>Create a Login</button>
        </form>
        </div>
      </center>


        <div class='container'>
        {% if events is not empty %}
        <ul>
            {% for event in events %}
        <li>{{ time.getEvent }}<link href="/event/{id}">Click here to join</link></li>
       </ul>
       {% endfor %}
        {% endif %}

        <center>


        <div class='header'><h1>PickApp<small> Join the Fun </small>
            <br>

            {% if events is not empty %}
            <ul>
                {% for event in events %}
            <li>{{ event.getName }}{{ event.getEventTime }}<link href="/event/{id}">Click here to join</link></li>
            <li>{{ event.getLocation }}</li>
           </ul>
           {% endfor %}
            {% endif %}

            <br>

        <form action='/events'>
            <button type"submit" class='btn btn-warning'>Events</button>
        </form>
        <form action='/create_login'>
            <button type"submit" class='btn btn-success'>Create a Login</button>
        </form>
        <form action='/login'>
            <button type"submit" class='btn btn-success'>Login</button>
        </form>

        </center>
    </body>
  </div>
</html>
