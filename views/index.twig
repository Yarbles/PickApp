<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel='stylesheet' href='../css/styles.css'>
        <title>PickApp</title>
    </head>
    <body>
        <div class='container'>
        {% if events is not empty %}
        <ul>
            {% for event in events %}
        <li>{{ time.getEvent }}<link href="/event/{id}">Click here to join</link></li>
       </ul>
       {% endfor %}
        {% endif %}

        <center>
        <div class='header'><h1>PickApp<small>Join the Fun</small></h1>
        <form action='/events'>
            <button type"submit" class='btn btn-warning'>Events</button>
        </form>
        <form action='/create_login'>
            <button type"submit" class='btn btn-success'>Create a Login</button>
        </form>
        <form action='/login'>
            <button type"submit" class='btn btn-success'>Login</button>
        </form>

        </center>
    </body>
  </div>
</html>
